<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/imageViewPersonLikes"
        android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginBottom="8dp"
    android:scaleType="centerCrop"
    android:contentDescription="Imagen de la persona" />

    <TextView
        android:id="@+id/nameTextViewLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de la persona"
        app:layout_constraintTop_toBottomOf="@id/imageViewPersonLikes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center" />

</androidx.constraintlayout.widget.ConstraintLayout>
